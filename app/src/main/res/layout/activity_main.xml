<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".LayoutActivity"
    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/bag" />

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vagabond sack"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_marginLeft="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$120"
                        android:textColor="#000"
                        android:textSize="11dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/sunglass" />

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Stella sunglasses"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_marginLeft="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$58"
                        android:textColor="#000"
                        android:textSize="11dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/belt" />

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Whitney belt"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_marginLeft="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$35"
                        android:textColor="#000"
                        android:textSize="11dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ring" />

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Garden strand"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_marginLeft="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$98"
                        android:textColor="#000"
                        android:textSize="11dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/thing" />

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Golden Earring"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_marginLeft="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$70"
                        android:textColor="#000"
                        android:textSize="11dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/resource_short" />

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="White short"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_marginLeft="8dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$20"
                        android:textColor="#000"
                        android:textSize="11dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </LinearLayout>





</ScrollView>

